---
import { constructFullCmsUrl } from "../helpers/strapi";

const { backgroundImageUrl, mainImageUrl } = Astro.props;
const fullBackgroundImageUrl = constructFullCmsUrl(backgroundImageUrl);
const fullMainImageUrl = constructFullCmsUrl(mainImageUrl);
---

<div class="d-flex hero vh-100 w-100 justify-content-center align-items-center">
    <img class="h-50 w-50" src={fullMainImageUrl} />
</div>


<style define:vars={{ backgroundImageUrl: `url("${fullBackgroundImageUrl}")` }}>
    .hero {
        background-image: var(--backgroundImageUrl);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>